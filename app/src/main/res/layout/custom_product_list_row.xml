<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"

        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/product_list_view"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/product" />

        <TextView
            android:id="@+id/tv_product_quantity"
            style="@style/product_list_view"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:padding="10dp"
            style="@style/product_list_view"
            android:text="@string/price" />

        <ImageButton
            android:id="@+id/btn_product_list_minus"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:padding="10dp"
            android:background="@color/productListColor"
            app:srcCompat="@drawable/minus48" />

        <ImageButton
            android:id="@+id/btn_product_list_plus"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@color/productListColor"
            android:layout_weight="15"
            app:srcCompat="@drawable/plus48" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>