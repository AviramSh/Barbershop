    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@color/basic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bill_report"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <!--android:entries="@array/ridesStatuses"-->
    <!--android:layout_width="0dp"-->
<!--    <Spinner android:id="@+id/ridesStatusSpinner"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="right"
        android:spinnerMode="dialog"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@color/basic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/startToEnd"
        android:id="@+id/startRideDateText"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textColor="@color/basic"
            android:id="@+id/startingDateText"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="55"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="07/01/2017"
            android:id="@+id/fromDateEdit" />


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:textColor="@color/basic"
            android:id="@+id/endingDateText"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="55"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="07/01/2017"
            android:id="@+id/endingDateEdit" />


    </LinearLayout>



    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@color/basic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="licensePlateText"
        android:id="@+id/licensePlateText"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
-->
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:inputType="number"
        android:id="@+id/licensePlateEdit"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@color/basic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/targetMail"
        android:id="@+id/taregtMailText"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/targetMailEdit"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:background="@drawable/rounded_rect"
        android:textSize="@dimen/menu_font_size"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:text="@string/action_issueReport"
        android:onClick="generateReport"
        android:id="@+id/generateReportButton"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />


</LinearLayout>
