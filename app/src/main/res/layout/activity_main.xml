<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esh_tech.aviram.barbershop.views.MainActivity">

    <LinearLayout
        android:id="@+id/llvMain"
        android:layout_width="368dp"
        android:layout_height="281dp"
        android:weightSum="100"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:id="@+id/llvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageButton
                    android:id="@+id/btStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btBalance"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    app:srcCompat="@drawable/product80" />

                <TextView
                    android:id="@+id/textView36"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/stock"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.571"
                    app:layout_constraintLeft_toLeftOf="@+id/btStock"
                    app:layout_constraintRight_toRightOf="@+id/btStock"
                    app:layout_constraintTop_toBottomOf="@+id/btStock"
                    app:layout_constraintVertical_bias="0.00999999" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvBalanc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageButton
                    android:id="@+id/btBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    app:srcCompat="@drawable/accounting" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/balance"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/btBalance"
                    app:layout_constraintRight_toRightOf="@+id/btBalance"
                    tools:layout_editor_absoluteY="148dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvCustomers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="254dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageButton
                    android:id="@+id/btCustomersList"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toRightOf="@+id/btBalance"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    app:srcCompat="@drawable/badge" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/main_title_item"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/customers"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/btCustomersList"
                    app:layout_constraintRight_toRightOf="@+id/btCustomersList" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="50"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="167dp">

            <LinearLayout
                android:id="@+id/llvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="155dp">

                <ImageButton
                    android:id="@+id/btSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btAppointmentsList"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/work" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/settings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="@+id/btSettings"
                    app:layout_constraintRight_toRightOf="@+id/btSettings" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="5dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="167dp">

                <ImageButton
                    android:id="@+id/btAppointmentsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/clipboard80" />

                <TextView
                    android:id="@+id/textView14"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="@string/appointment"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
                    app:layout_constraintHorizontal_bias="0.555"
                    app:layout_constraintLeft_toLeftOf="@+id/btAppointmentsList"
                    app:layout_constraintRight_toRightOf="@+id/btAppointmentsList" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvCustomerRetention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="155dp">

                <ImageButton
                    android:id="@+id/btCustomersService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintLeft_toRightOf="@+id/btAppointmentsList"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/customersupport80" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/main_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customerretention"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/btCustomersService"
                    app:layout_constraintRight_toRightOf="@+id/btCustomersService" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/barberchair"
        android:background="@color/background"
        android:id="@+id/btNewAppointment"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.919"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nextturn"
        style="@style/main_title_item"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="186dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/lvNextAppointment"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="@+id/lvNextAppointment"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="77dp"
        android:layout_height="17dp"
        android:text="@string/newturn"
        style="@style/main_title_item"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btNewAppointment"
        app:layout_constraintVertical_bias="0.071"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btNewAppointment"
        app:layout_constraintLeft_toLeftOf="@+id/btNewAppointment"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginEnd="8dp" />

    <ListView
        android:layout_width="174dp"
        android:layout_height="166dp"
        android:id="@+id/lvNextAppointment"
        android:background="@color/empty"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>
