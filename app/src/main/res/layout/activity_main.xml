<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esh_tech.aviram.barbershop.views.MainActivity">

    <ImageButton
        android:id="@+id/btCustomersList"
        android:background="@color/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/badge"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btBalance"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/btStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:srcCompat="@drawable/product80"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btBalance"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/barberchair"
        android:background="@color/background"
        android:id="@+id/btNewAppointment"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.919"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/work"
        android:background="@color/background"
        android:id="@+id/btSettings"
        android:onClick="onClick"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btAppointmentsList"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="268dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clipboard80"
        android:background="@color/background"
        android:onClick="onClick"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btAppointmentsList"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="268dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/accounting"
        android:background="@color/background"
        android:id="@+id/btBalance"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="79dp"
        android:layout_height="24dp"
        android:text="@string/stock"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btStock"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.00999999"
        android:id="@+id/textView36"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btStock"
        app:layout_constraintRight_toRightOf="@+id/btStock"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:text="@string/appointment"
        android:gravity="center"
        android:id="@+id/textView14"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btAppointmentsList"
        app:layout_constraintRight_toRightOf="@+id/btAppointmentsList"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.555"
        android:layout_marginStart="8dp" />


    <TextView
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:text="@string/customers"
        android:gravity="center"
        android:id="@+id/textView16"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btCustomersList"
        app:layout_constraintLeft_toLeftOf="@+id/btCustomersList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="22dp"
        android:text="@string/settings"
        android:gravity="center"
        android:id="@+id/textView12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btSettings"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btSettings"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btSettings"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="@string/balance"
        app:layout_constraintLeft_toLeftOf="@+id/btBalance"
        android:id="@+id/textView5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btBalance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView36"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/btCustomersService"
        android:layout_width="84dp"
        android:layout_height="81dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/customersupport80"
        android:background="@color/background"
        app:layout_constraintLeft_toRightOf="@+id/btAppointmentsList"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="268dp"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customerretention"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btCustomersService"
        app:layout_constraintRight_toRightOf="@+id/btCustomersService"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nextturn"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="186dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/lvNextAppointment"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/lvNextAppointment" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="77dp"
        android:layout_height="17dp"
        android:text="@string/newturn"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btNewAppointment"
        app:layout_constraintVertical_bias="0.071"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btNewAppointment"
        app:layout_constraintLeft_toLeftOf="@+id/btNewAppointment"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginEnd="8dp" />

    <ListView
        android:layout_width="174dp"
        android:layout_height="166dp"
        android:id="@+id/lvNextAppointment"
        android:background="@color/empty"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.666" />


</android.support.constraint.ConstraintLayout>
